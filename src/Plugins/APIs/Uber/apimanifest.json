{
    "applicationName": "Uber Maps Plugin",
    "description": "This plugin accesses Uber Maps API to retrieve location and routing-based information.",
    "publisher": {
        "name": "Tyler",
        "contactEmail": "contact.tylerkendrick@gmail.com"
    },
    "apiDependencies": {
        "uberMaps": {
            "apiDescriptionUrl": "https://developer.uber.com/docs/riders/references/api/v1-endpoints",
            "requests": [
                {
                    "method": "GET",
                    "uriTemplate": "/v1.2/estimates/price"
                },
                {
                    "method": "GET",
                    "uriTemplate": "/v1.2/estimates/time"
                },
                {
                    "method": "GET",
                    "uriTemplate": "/v1.2/places/{place_id}"
                },
                {
                    "method": "GET",
                    "uriTemplate": "/v1.2/rides/{request_id}/estimate"
                },
                {
                    "method": "GET",
                    "uriTemplate": "/v1.2/rides/{request_id}"
                }
            ]
        }
    }
}
