{
    "applicationName": "IFTTT Plugin",
    "description": "This plugin accesses IFTTT API to control configured triggers.",
    "publisher": {
        "name": "Tyler",
        "contactEmail": "contact.tylerkendrick@gmail.com"
    },
    "apiDependencies": {
        "IFTTT": {
            "apiDescriptionUrl": "https://raw.githubusercontent.com/IFTTT/service-api/main/service-api.yaml",
            "requests": [
                {
                    "method": "POST",
                    "uriTemplate": "/ifttt/v1/triggers/{stepSlug}"
                },
                {
                    "method": "POST",
                    "uriTemplate": "/ifttt/v1/actions/{stepSlug}"
                },
                {
                    "method": "POST",
                    "uriTemplate": "/ifttt/v1/queries/{stepSlug}"
                },
                {
                    "method": "GET",
                    "uriTemplate": "/ifttt/v1/status"
                }
            ]
        }
    }
}
